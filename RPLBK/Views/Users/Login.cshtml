@model RPLBK.Models.Users

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Template.cshtml";
}
<!-- start banner Area -->
<section class="banner-areas relative" style="margin-bottom:5px; margin-top:5px;">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-between">
            
        </div>
    </div>
</section>
<!-- End banner Area -->

<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row" >
            <div style="float: left;width: 50%;padding: 10px;">
            @using (Html.BeginForm("Login", "Users", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div >
                @if (ViewBag.Message != null)
                {
                    @ViewBag.Message
                }
                </div>
                <div class="form-group">
                    <!--MASUK-->
                    <div class="col-lg-12 d-flex flex-column address-wrap">
                        <p>
                            <h1>
                                <div class="col-lg-8" style="text-align:center;">
                                    <div style="text-align:center;">
                                        MASUK
                                    </div>
                                </div>
                            </h1>
                        </p>

                        <div class="single-contact-address d-flex flex-row" style="padding-bottom:10px;">
                            <div class="contact-details">
                                <h5 style="padding-bottom:10px;">Email</h5>
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="single-contact-address d-flex flex-row" style="padding-bottom:10px;">
                            <div class="contact-details">
                                <h5 style="padding-bottom:10px;">Password</h5>
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-8" style="text-align:center;">
                            <div style="text-align:center;">
                                <input type="submit" value="Masuk" class="genric-btn primary" />
                            </div>
                        </div>

                    </div>
                </div>

            }
            </div>

            <div style="float: left;width: 50%;padding: 10px;">
            @using (Html.BeginForm("Register", "Users", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div>
                    @if (ViewBag.Message != null)
                {
                        @ViewBag.Message
                    }
                </div>
                <div class="form-group">
                    <!--REGISTER-->
                    <div class="col-lg-12 d-flex flex-column address-wrap">
                        <p>
                            <h1>
                                <div class="col-lg-8" style="text-align:center;">
                                    <div style="text-align:center;">
                                        DAFTAR
                                    </div>
                                </div>
                            </h1>
                        </p>
                        <div class="row">
                            <div class="col-lg-6 form-group">

                                <div class="single-contact-address d-flex flex-row" style="padding-bottom:10px;">
                                    <div class="contact-details">
                                        <h5 style="padding-bottom:10px;">Nama</h5>
                                        @Html.EditorFor(model => model.nama, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nama, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="single-contact-address d-flex flex-row" style="padding-bottom:10px;">
                                    <div class="contact-details">
                                        <h5 style="padding-bottom:10px;">Email</h5>
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="single-contact-address d-flex flex-row" style="padding-bottom:10px;">
                                    <div class="contact-details">
                                        <h5 style="padding-bottom:10px;">Nomor Handphone</h5>
                                        @Html.EditorFor(model => model.nomorhp, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nomorhp, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="single-contact-address d-flex flex-row" style="padding-bottom:10px;">
                                    <div class="contact-details">
                                        <h5 style="padding-bottom:10px;">Password</h5>
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-lg-11" style="text-align:right;">
                                    <div style="text-align:right; padding-bottom:20px;">
                                        <input type="submit" value="Daftar" class="genric-btn primary" />
                                    </div>
                                </div>

                            </div>
                        </div>


                    </div>
                </div>

            }
            </div>
        </div>
</section>
